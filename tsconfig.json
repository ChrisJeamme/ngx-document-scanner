{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true,
    "fullTemplateTypeCheck": true, 
    "enableIvy": true,
    "preserveSymlinks": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ngx-document-scanner": [
        "dist/ngx-document-scanner"
      ],
      "ngx-document-scanner/*": [
        "dist/ngx-document-scanner/*"
      ],
      "ngx-opencv": [
        "dist/ngx-opencv"
      ],
      "ngx-opencv/*": [
        "dist/ngx-opencv/*"
      ]
    }
  },
  "types": [
    "src/typings.d.ts"
  ]
}